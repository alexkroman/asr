{
  "n_mels": 80,
  "d_model": 256,
  "n_head": 4,
  "num_layers": 4,
  "kernel_size": 15,
  "conformer_dropout": 0.1,

  "decoder_model_name": "HuggingFaceTB/SmolLM2-135M",
  "use_lora": true,
  "lora_r": 8,
  "lora_alpha": 16,
  "lora_dropout": 0.05,
  "lora_target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],

  "num_queries": 16,
  "projector_num_heads": 4,
  "projector_dropout": 0.1,

  "dataset_name": "librispeech_asr",
  "dataset_config_name": "clean",
  "train_split": "train.100",
  "eval_split": "validation",
  "max_audio_seconds": 15.0,
  "max_text_words": 100,
  "sample_rate": 16000,
  "dataset_cache_dir": "./datasets_cache",
  "num_proc": 4,

  "output_dir": "./small_test_output",
  "overwrite_output_dir": true,
  "max_steps": 15000,
  "per_device_train_batch_size": 4,
  "per_device_eval_batch_size": 4,
  "gradient_accumulation_steps": 4,
  "eval_accumulation_steps": 1,
  "warmup_steps": 500,
  "learning_rate": 5e-4,
  "weight_decay": 0.01,
  "logging_dir": "./small_test_logs",
  "logging_steps": 100,
  "eval_strategy": "steps",
  "eval_steps": 500,
  "save_strategy": "steps",
  "save_steps": 1000,
  "save_total_limit": 3,
  "load_best_model_at_end": true,
  "metric_for_best_model": "wer",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": ["tensorboard"],
  "dataloader_num_workers": 2,
  "gradient_checkpointing": true,
  "fp16": false,
  "bf16": true,
  "dataloader_pin_memory": true,
  "max_grad_norm": 1.0,
  "seed": 42,
  "do_generation_test": true,
  "generation_max_length": 10,
  "test_checkpoint_loading": false,
  "disable_tqdm": false,
  "log_level": "info",
  "logging_first_step": true
}