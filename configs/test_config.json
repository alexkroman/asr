{
  "n_mels": 80,
  "d_model": 128,
  "n_head": 4,
  "num_layers": 2,
  "kernel_size": 15,
  "conformer_dropout": 0.1,

  "decoder_model_name": "HuggingFaceTB/SmolLM2-135M",
  "use_lora": true,
  "lora_r": 4,
  "lora_alpha": 8,
  "lora_dropout": 0.05,
  "lora_target_modules": ["q_proj", "v_proj"],

  "num_queries": 8,
  "projector_num_heads": 4,
  "projector_dropout": 0.1,

  "dataset_name": "librispeech_asr",
  "dataset_config_name": "clean",
  "train_split": "train.100[:20]",
  "eval_split": "validation[:10]",
  "max_audio_seconds": 10.0,
  "max_text_words": 50,
  "sample_rate": 16000,
  "dataset_cache_dir": "./datasets_cache",
  "num_proc": 1,

  "output_dir": "./test_output",
  "overwrite_output_dir": true,
  "num_train_epochs": 1,
  "per_device_train_batch_size": 2,
  "per_device_eval_batch_size": 2,
  "gradient_accumulation_steps": 1,
  "eval_accumulation_steps": 1,
  "warmup_steps": 10,
  "learning_rate": 5e-4,
  "weight_decay": 0.01,
  "logging_dir": "./test_logs",
  "logging_steps": 5,
  "eval_strategy": "steps",
  "eval_steps": 10,
  "save_strategy": "steps",
  "save_steps": 20,
  "save_total_limit": 1,
  "load_best_model_at_end": false,
  "metric_for_best_model": "wer",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": ["tensorboard"],
  "dataloader_num_workers": 0,
  "gradient_checkpointing": false,
  "fp16": false,
  "bf16": false,
  "dataloader_pin_memory": false,
  "max_grad_norm": 1.0,
  "seed": 42
}