{
  "n_mels": 80,
  "d_model": 252,
  "n_head": 6,
  "num_layers": 6,
  "kernel_size": 15,
  "conformer_dropout": 0.1,

  "decoder_model_name": "HuggingFaceTB/SmolLM2-1.7B-Instruct",
  "use_lora": true,
  "lora_r": 32,
