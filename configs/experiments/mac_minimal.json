  "num_queries": 64,
  "projector_num_heads": 4,
  "projector_num_layers": 2,
  "projector_dropout": 0.1,

  "dataset_name": "librispeech_asr",
  "dataset_configs": ["clean", "clean"],
  "train_splits": ["train.100", "train.360"],
  "eval_splits": ["validation", "validation"],
  "max_audio_seconds": 10.0,
  "max_text_words": 50,
  "sample_rate": 16000,
  "dataset_cache_dir": "./datasets_cache",
  "num_proc": 1,

  "output_dir": "./mac_minimal_output",
  "overwrite_output_dir": false,
  "max_steps": 25000,
  "per_device_train_batch_size": 1,
  "per_device_eval_batch_size": 1,
  "gradient_accumulation_steps": 16,
  "eval_accumulation_steps": 1,
  "learning_rate": 5e-5,
  "lr_scheduler_type": "cosine",
  "warmup_ratio": 0.05,
  "weight_decay": 0.01,
  "optim": "adamw_torch",
  "adam_beta1": 0.9,
  "adam_beta2": 0.98,
  "adam_epsilon": 1e-8,
  "logging_dir": "./mac_minimal_logs",
  "logging_steps": 10,
  "eval_strategy": "steps",
  "eval_steps": 1000,
  "save_strategy": "steps",
  "save_steps": 1000,
  "save_total_limit": 1,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_loss",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": [],
  "dataloader_num_workers": 0,
  "gradient_checkpointing": true,
  "fp16": false,
  "bf16": true,
  "dataloader_pin_memory": false,
  "max_grad_norm": 1,
  "seed": 42,
  "save_safetensors": false,
  "do_generation_test": false,
  "generation_max_length": 10,
  "disable_tqdm": false,
  "log_level": "info",
  "logging_first_step": true,
  "logging_nan_inf_filter": false,
  "use_cache": false,
  "compute_metrics": true,
  "predict_with_generate": true
