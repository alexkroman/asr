{
  "n_mels": 80,
  "d_model": 512,
  "n_head": 8,
  "num_layers": 12,
  "kernel_size": 15,
  "conformer_dropout": 0.1,

  "decoder_model_name": "HuggingFaceTB/SmolLM2-1.7B-Instruct",
  "use_lora": true,
  "lora_r": 32,
  "lora_alpha": 32,
  "lora_dropout": 0.05,
  "lora_target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],

  "use_spec_augment": true,
  "freq_mask_param": 27,
  "time_mask_param": 100,
  "n_freq_masks": 2,
  "n_time_masks": 2,

  "num_queries": 128,
  "projector_num_heads": 8,
  "projector_num_layers": 2,
  "projector_dropout": 0.1,

  "dataset_name": "librispeech_asr",
  "dataset_configs": ["clean", "clean", "other"],
  "train_splits": ["train.100", "train.360", "train.500"],
  "eval_splits": ["validation", "validation", "validation"],
  "max_audio_seconds": 30.0,
  "max_text_words": 250,
  "sample_rate": 16000,
  "dataset_cache_dir": "/workspace/datasets",
  "num_proc": 32,

  "output_dir": "/workspace/production_model",
  "overwrite_output_dir": false,
  "max_steps": 25000,
  "per_device_train_batch_size": 64,
  "per_device_eval_batch_size": 64,
  "gradient_accumulation_steps": 2,
  "eval_accumulation_steps": 1,
  "learning_rate": 1e-4,
  "lr_scheduler_type": "cosine",
  "warmup_ratio": 0.01,
  "weight_decay": 0.01,
  "optim": "adamw_torch_fused",
  "adam_beta1": 0.9,
  "adam_beta2": 0.98,
  "adam_epsilon": 1e-8,
  "logging_dir": "/workspace/production_logs",
  "logging_steps": 10,
  "eval_strategy": "steps",
  "eval_steps": 1000,
  "save_strategy": "steps",
  "save_steps": 1000,
  "save_total_limit": 5,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_loss",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": ["tensorboard"],
  "dataloader_num_workers": 3,
  "gradient_checkpointing": true,
  "fp16": false,
  "bf16": true,
  "dataloader_pin_memory": true,
  "dataloader_prefetch_factor": 2,
  "dataloader_persistent_workers": true,
  "max_grad_norm": 1,
  "seed": 42,
  "save_safetensors": false,
  "do_generation_test": false,
  "generation_max_length": 50,
  "disable_tqdm": false,
  "log_level": "info",
  "logging_first_step": true,
  "logging_nan_inf_filter": false,
  "use_cache": false,
  "compute_metrics": true,
  "predict_with_generate": true,
  "resume_from_checkpoint": null
}