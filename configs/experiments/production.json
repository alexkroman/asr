{
  "n_mels": 80,
  "d_model": 512,
  "n_head": 8,
  "num_layers": 12,
  "kernel_size": 15,
  "conformer_dropout": 0.15,

  "decoder_model_name": "HuggingFaceTB/SmolLM2-360M-Instruct",
  "use_lora": true,
  "lora_r": 128,
  "lora_alpha": 64,
  "lora_dropout": 0.2,
  "lora_target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],

  "use_spec_augment": false,

  "num_queries": 48,
  "projector_num_heads": 8,
  "projector_num_layers": 6,
  "projector_dropout": 0.2,

  "dataset_name": "librispeech_asr",
  "dataset_configs": ["clean", "clean", "other"],
  "train_splits": ["train.100", "train.360", "train.500"],
  "eval_splits": ["validation", "validation", "validation"],
  "max_audio_seconds": 20.0,
  "max_text_words": 150,
  "sample_rate": 16000,
  "dataset_cache_dir": "/workspace/datasets",
  "num_proc": 32,

  "output_dir": "/workspace/production_model_v3",
  "overwrite_output_dir": true,
  "max_steps": 20000,
  "per_device_train_batch_size": 64,
  "per_device_eval_batch_size": 64,
  "gradient_accumulation_steps": 1,
  "eval_accumulation_steps": 1,
  "learning_rate": 1e-4,
  "lr_scheduler_type": "cosine_with_restarts",
  "warmup_steps": 1000,
  "weight_decay": 0.05,
  "optim": "adamw_torch",
  "adam_beta1": 0.9,
  "adam_beta2": 0.999,
  "adam_epsilon": 1e-8,
  "logging_dir": "/workspace/production_logs_v3",
  "logging_steps": 10,
  "eval_strategy": "steps",
  "eval_steps": 500,
  "save_strategy": "steps",
  "save_steps": 500,
  "save_total_limit": 5,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_loss",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": ["tensorboard"],
  "dataloader_num_workers": 3,
  "gradient_checkpointing": true,
  "fp16": false,
  "bf16": true,
  "dataloader_pin_memory": true,
  "dataloader_prefetch_factor": 2,
  "dataloader_persistent_workers": true,
  "max_grad_norm": 0.5,
  "seed": 42,
  "save_safetensors": true,
  "do_generation_test": false,
  "generation_max_length": 50,
  "disable_tqdm": false,
  "log_level": "info",
  "logging_first_step": true,
  "logging_nan_inf_filter": true,
  "use_cache": false,
  "compute_metrics": false,
  "predict_with_generate": false,
  "resume_from_checkpoint": null
