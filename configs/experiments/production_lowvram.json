{
  "n_mels": 80,
  "d_model": 768,

  "decoder_model_name": "Qwen/Qwen3-0.6B",
  "use_lora": true,
  "lora_r": 4,
  "lora_alpha": 8,
  "lora_dropout": 0.1,
  "lora_target_modules": ["q_proj", "v_proj"],
  "use_spec_augment": false,
  "num_queries": 0,
  "projector_num_heads": 8,
  "projector_num_layers": 2,
  "projector_dropout": 0.0,

  "dataset_name": "librispeech_asr",
  "dataset_configs": ["clean", "clean", "other"],
  "train_splits": ["train.100", "train.360", "train.500"],
  "eval_splits": ["validation", "validation", "validation"],
  "max_audio_seconds": 10.0,
  "max_text_words": 75,
  "sample_rate": 16000,
  "dataset_cache_dir": "/workspace/datasets",
  "num_proc": 8,

  "output_dir": "/workspace/production_model_lowvram",
  "overwrite_output_dir": true,
  "max_steps": 20000,
  "per_device_train_batch_size": 4,
  "per_device_eval_batch_size": 2,
  "gradient_accumulation_steps": 16,
  "eval_accumulation_steps": 4,
  "learning_rate": 1e-5,
  "lr_scheduler_type": "cosine",
  "warmup_steps": 500,
  "weight_decay": 0.01,
  "optim": "adafactor",
  "adam_beta1": 0.9,
  "adam_beta2": 0.98,
  "adam_epsilon": 1e-6,
  "logging_dir": "/workspace/production_logs_lowvram",
  "logging_steps": 10,
  "eval_strategy": "steps",
  "eval_steps": 500,
  "save_strategy": "steps",
  "save_steps": 500,
  "save_total_limit": 3,
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_loss",
  "greater_is_better": false,
  "push_to_hub": false,
  "report_to": ["tensorboard"],
  "dataloader_num_workers": 2,
  "gradient_checkpointing": true,
  "fp16": true,
  "bf16": false,
  "dataloader_pin_memory": false,
  "dataloader_prefetch_factor": null,
  "dataloader_persistent_workers": false,
  "max_grad_norm": 1.0,
  "seed": 42,
  "save_safetensors": true,
  "do_generation_test": false,
  "generation_max_length": 50,
  "disable_tqdm": false,
  "log_level": "info",
  "logging_first_step": true,
  "logging_nan_inf_filter": true,
  "use_cache": false,
  "compute_metrics": false,
  "predict_with_generate": false,
  "resume_from_checkpoint": null,
  "torch_compile": false,
  "compile_mode": "default",
  "optim_args": "scale_parameter=False,relative_step=False"
}